    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "nx",
                "run",
                "backend-chat:serve:development"
            ],
            "outputCapture": "std",
            "internalConsoleOptions": "openOnSessionStart",
            "console": "internalConsole",
            "env": {
                "NODE_OPTIONS": "--require=ts-node/register --require=tsconfig-paths/register",
                "TS_NODE_IGNORE": "false",
                "TS_NODE_PROJECT": "${workspaceFolder}/backend-chat/tsconfig.json",
                "REDIS_PWD": "test1245",
                "REDIS_HOST": "localhost",
                "MONGO_USER": "sshift",
                "MONGO_PWD": "test1245",
                "MONGO_URI":"mongodb://sshift:test1245@localhost:27017/sshift?authMechanism=SCRAM-SHA-256&authSource=admin",
                "JWT_SECRET_KEY": "my_sshift_ultra_super_secret"
            },
            "cwd": "${workspaceFolder}"
        }
    ]
}